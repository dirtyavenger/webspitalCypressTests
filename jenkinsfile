pipeline {
    agent any
    parameters{
        string(name: 'SPEC', defailtValue: "cypress/e2e/3-my own/myOwnTest.cy.js", description: "Enter the script path you want to execute")
        choice(name: 'BROWSER',choices: ["chrome","edge","firefox"], description: "Choose browser")
    }

    stages{
        stage('Build'){
            steps{
                echo "Building the app"
                }
        }
        stage('Testing'){
           steps {
            sh "npm install"
            sh "npx cypres run --browser ${BROWSER}"
           }
        }
        stage('Deploying'){
            steps{
                echo "Deploying the app"
                }
        }
    }
}